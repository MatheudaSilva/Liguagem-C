#include <stdio.h>

int valor;

int main()
{
    printf("Digite um valor inteiro: ");
    scanf("%d", &valor);
    printf("O valor digitado é: %d\n", valor);
    
    int verificar();
    verificar(valor);
}

int verificar()
{
    if(valor < 0)
    {
        return printf("O valor é negativo");
    }
    else if(valor == 0)
    {
        return printf("O valor é zero");
    }
    else
    {
        return printf("O valor é positivo");
    }
}
